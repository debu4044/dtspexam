clc
 clear
 x1 = [6 3 2 1 8];
 x2 = [4 5 1];
 N1 = length(x1);
 N2 = length(x2);
 %appending zeros
 if (N1 < N2)
  x1 = [x1 zeros(1,N2-N1)];
 else
  x2 = [x2 zeros(1, N1-N2)];
 end
 x1
 x2
 %circular matrix
 N2 = length(x2);
 c = x2';
 b = x2;
 for n = 1:1:(N2-1)
  b = [b(N2) b(1:(N2-1))];
  %pause()
  c = [c  b'];
 end
 c
 %circular convolution
 y = c * x1'
